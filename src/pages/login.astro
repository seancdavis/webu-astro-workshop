---
import Layout from '@/layouts/Layout.astro'
---

<Layout title="Login">
  <div class="container">
    <h1>Login</h1>
    <form action="/api/login" method="post">
      <label for="email">Email</label>
      <input type="email" id="email" name="email" required />
      <button type="submit">Login</button>
    </form>
  </div>
</Layout>
