---
import ContentWrapper from '@/layouts/ContentWrapper.astro'
import Footer from '@/layouts/Footer.astro'
import Header from '@/layouts/Header.astro'
import '@/styles/main.css'

interface Props {
  title: string
  indexable?: boolean
}

const { title, indexable } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen justify-between flex flex-col">
    <div>
      <Header />
      <ContentWrapper indexable={indexable}>
        <slot />
      </ContentWrapper>
    </div>
    <Footer />
  </body>
</html>
